<button type="button" class="inline-control combatant-control icon fa-solid cosmere-icon {{#unless reactionUsed}}active{{/unless}} reaction-used">
    <i class = "cosmere-icon">r</i>
</button>
{{#if (gt actionsLeft 0)}}
<button type="button" class="inline-control combatant-control icon fa-solid active actions-left">
    <i class = "cosmere-icon">{{actionsLeft}}</i>
</button>
{{/if}}
{{#each actionsUsed as |usedAction|}}
<button type="button" class="inline-control combatant-control icon fa-solid cosmere-icon actions-used" action-name="{{usedAction.name}}" action-cost="{{usedAction.cost}}">
    <i class = "cosmere-icon">{{usedAction.cost}}</i>
</button>
{{/each}}